{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "forgejo>margau/renovate-defaults"
  ],
  "packageRules": [
    {
      "matchFileNames": [
        ".forgejo/workflows/commitlint.yaml",
        ".forgejo/workflows/lint.yaml",
        ".forgejo/workflows/publish.yaml",
        ".forgejo/workflows/container.yaml"
      ],
      "enabled": false
    },
    {
      "matchFileNames": [
        ".forgejo/workflows/commitlint.yaml",
        ".forgejo/workflows/lint.yaml",
        ".forgejo/workflows/publish.yaml",
        ".forgejo/workflows/container.yaml"
      ],
      "matchManagers": [
        "copier"
      ],
      "enabled": true
    },
    {
      "matchManagers": [
        "docker-compose"
      ],
      "matchUpdateTypes": [
        "pin",
        "digest"
      ],
      "enabled": false
    }
  ]
}
